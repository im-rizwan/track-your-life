// Prisma Schema for Track-Yr-Life Backend

generator client {
  provider = "prisma-client-js"
  // Improve performance with binary targets
  binaryTargets = ["native", "linux-musl-openssl-3.0.x","linux-musl-arm64-openssl-3.0.x","darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MANAGEMENT
// ============================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Will be hashed with bcrypt
  firstName String?  @map("first_name")
  lastName  String?  @map("last_name")
  
  // Account status
  isActive       Boolean  @default(true) @map("is_active")
  emailVerified  Boolean  @default(false) @map("email_verified")
  emailVerifiedAt DateTime? @map("email_verified_at")
  
  // Security
  lastLoginAt    DateTime? @map("last_login_at")
  passwordChangedAt DateTime? @map("password_changed_at")
  
  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // Relations
  refreshTokens RefreshToken[]
  
  @@map("users")
  @@index([email])
}

// ============================================
// AUTHENTICATION
// ============================================

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("refresh_tokens")
  @@index([userId])
  @@index([expiresAt])
}
